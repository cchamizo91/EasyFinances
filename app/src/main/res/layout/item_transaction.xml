<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:contentDescription="@string/elemento_de_transacci_n_financiera">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Cantidad -->
        <TextView
            android:id="@+id/textTransactionAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="€0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:contentDescription="@string/cantidad_de_la_transacci_n" />

        <!-- Categoría -->
        <TextView
            android:id="@+id/textTransactionCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/categor_a"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/holo_green_dark"
            android:contentDescription="@string/categor_a_de_la_transacci_n" />

        <!-- Fecha -->
        <TextView
            android:id="@+id/textTransactionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ffecha"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:contentDescription="@string/fecha_de_la_transacci_n" />

        <!-- Tipo -->
        <TextView
            android:id="@+id/textTransactionType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ttipo"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark"
            android:contentDescription="@string/tipo_de_transacci_n_ingreso_o_gasto" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

