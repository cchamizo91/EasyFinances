<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del ProgressBar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Gris claro para el fondo -->
            <corners android:radius="12dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Progreso principal -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#4CAF50" /> <!-- Verde vibrante para el progreso -->
                <corners android:radius="12dp" /> <!-- Bordes redondeados -->
            </shape>
        </clip>
    </item>

    <!-- Progreso secundario (opcional) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FFC107" /> <!-- Amarillo para el progreso secundario -->
                <corners android:radius="12dp" />
            </shape>
        </clip>
    </item>
</layer-list>
